page{
 background-color: #f1f1f1;
}

.top{
  height: 40vw;
  width: 100%;
  background: linear-gradient(120deg,#effffc, #d0f6f4); 
  filter: blur(100rpx);
  z-index: 1;
}

.context{
  position: relative;
  width: 90%;
  background-color: #f9f9f9;
  box-shadow: 0px 4px 16px 0px rgba(0,0,0,0.06); 
  right: 0;
  left: 0;
  margin: 10vw auto;
  border-radius: 4vw;
  z-index: 99;
}

.back{
  width: 10vw;
  height: 10vw;
  position: fixed;
  background-color: white;
  top: 5vh;
  left: 3vw;
  z-index: 999;
  border-radius: 99vw;
  border-radius: 50%;
  border: solid 0.1px; 
  border-color:#acacac;
  display: flex;
  align-items: center;
  justify-content: center;

}

.question{
  font-size: medium;
  font-weight: 500;
  width: 78%;
  position: relative;
  left: 2vw;
  top: 0.5vw;
}

.choose{
  padding-top: 5vw;
  left: 5vw;
  position: relative;
}

.icon{
  width: 25px;
  height: 25px;
  padding-right: 3vw;
  position: relative;
}

.singlechoose{
 position: relative;
  padding-bottom: 5vw;
  width: 90%;
  color: #666;
  font-size: small;
}

.title{

 position: absolute;
 top: 25vw;
 font-weight: 550;
 font-size: larger; 
 left: 10vw;

}

.botton{
  margin-top: 10vw;
  text-align: center;
  margin-bottom: 10vw;
}

.singletitle{
  display: flex;
  align-content: center;
  padding-top: 3vw;
  left: 3vw;
  position: relative;
  padding-bottom:3vw ;
}


.choosetext{
  font-size: small;
  color: #666;
  position: relative;
  top: 0vw;
  width: 90%;
}


.istrueicon{
  width: 10%;
  position: relative;
  top: -2vw;
  height: auto;
}

.istrue{
  display: flex;
  align-content: center;
  position: relative;
  left: 5vw;
}

.right{
  position: relative;
  left: 5vw;
  width: 90%;
  text-overflow:ellipsis;
  word-wrap:break-word;
}

.grade{
  width: 30%;
}

.gradecontainer{
  display: flex;
  align-items: center;
  justify-content: center;
}

.noceshi{
  width: 50%;
}

.noceshicontainer{
  display: flex;
  align-items: center;
  justify-content: center;
}

.notext{
  margin-top: 5vw;
  display: flex;
  align-items: center;
  justify-content: center;
  font-weight: 550;
}