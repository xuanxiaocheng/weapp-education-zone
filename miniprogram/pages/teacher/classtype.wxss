.img{
  position: relative;
  width:35vw;
  height: 20vw;
  border-radius: 2vw;
  left: 5vw;
  border-width: 0.3vw;
  border-style: solid;
  border-color: #f1f1f1;
}

.title{
  position: absolute;
  top: 1vw;
  width: 50%;
  left: 50vw;
  font-weight: 500;
  font-size: small;
  font-size-adjust: inherit;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}

.teacher{
  position: absolute;
  top: 8vw;
  left: 50vw;
  font-weight: 500;
  font-size-adjust: inherit;
  font-size: small;
  color: darkgray;
}

.stunum{
  position: absolute;
  top: 15vw;
  left: 50vw;
  font-weight: 500;
  font-size-adjust: inherit;
  font-size: small;
  color: darkgray;
}


.back{
  width: 10vw;
  height: 10vw;
  position: fixed;
  background-color: white;
  top: 5vh;
  left: 3vw;
  z-index: 999;
  border-radius: 99vw;
  border-radius: 50%;
  border: solid 0.1px; 
  border-color:#acacac;
  display: flex;
  align-items: center;
  justify-content: center;

}

.top{
  height: 58vw;
  background-color: #fef5ec;
 
}

.icon{
  width: 40%;
  position: absolute;
  left: 60vw;
  top: 25vw;
}

.titletop{
  position: absolute;
  font-weight: 500;
  font-size: large;
  left: 6vw;
  top: 25vw;
}

.classcontainer{
  position: relative;
  top: 5vw;
  padding-bottom: 5vw;

}

.context{
min-height: 10vw;
top: -7vw;
background-color: white;
